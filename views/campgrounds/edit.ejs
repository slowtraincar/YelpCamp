<% include ../partials/header %>
<div class = "text-center">
    <h1 class= "text-info">Edit <%= campground.name %></h1>
    <br>
    <form action = "/campgrounds/<%= campground._id %>?_method=PUT"  method= "POST">
        <div class="form-group">
            
        </div>
        
        <div class="form-group">
           <p><input type="text" name="campground[name]" value= "<%=campground.name%>"></p> 
        </div>
        
        <div class="form-group">
           <p><input type="number" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01"></p> 
        </div>
        
        <div class="form-group">
             <p><input type="text" name="campground[image]" value="<%=campground.image%>"></p>
        </div>
        
        <div class="form-group">
             <p><input type="text" name="campground.[description]" value="<%=campground.description%>"></p>
        </div>
        
        <div class="form-group">
            <p><button class= "btn-info">Submit!</button></p>
        </div>    
    </form>
 
    <br>
    <a href= "/campgrounds"> Go Back</a>
</div>
<% include ../partials/footer %>