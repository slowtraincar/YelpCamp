<% include ../partials/header %>
<div class = "text-center">
    <h1 class="text-white">Create a new campground</h1>
    <br>
    <form action = "/campgrounds"  method= "POST">
        <div class="form-group">
            
        </div>
        
        <div class="form-group">
           <p><input type="text" name="name" placeholder="name"></p> 
        </div>
        
        <div class="form-group">
           <p><input type="number" name="price" placeholder="price" min="0.01" step="0.01"></p> 
        </div>
        
        <div class="form-group">
             <p><input type="text" name="image" placeholder="image url"></p>
        </div>
        
        <div class="form-group">
             <p><input type="text" name="description" placeholder="description"></p>
        </div>
        
        <div class="form-group">
            <p><button class= "btn-info">Submit!</button></p>
        </div>    
    </form>
 
    <br>
    <a href= "/campgrounds"> Go Back</a>
</div>
<% include ../partials/footer %>